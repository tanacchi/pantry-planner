{
  "name": "pantry-planner-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Pantry Planner",
  "scripts": {
    "postinstall": "pnpm exec playwright install",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:all-projects": "run-p test:chromium test:webkit test:mobile-*",
    "test:chromium": "playwright test --project=chromium",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile-chrome": "playwright test --project=\"Mobile Chrome\"",
    "test:mobile-safari": "playwright test --project=\"Mobile Safari\"",
    "report": "playwright show-report",
    "lint": "biome check .",
    "lint:biome": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:biome:fix": "biome check . --write",
    "lint:check": "biome check . --no-errors-on-unmatched",
    "lint:biome:check": "biome check . --no-errors-on-unmatched",
    "servers:start": "run-p servers:*",
    "servers:api": "cd ../api && npm run start:dev",
    "servers:ui": "cd ../ui && npm run dev",
    "servers:stop": "run-p servers:*:stop",
    "servers:api:stop": "pkill -f \"npm run start:dev\" || true",
    "servers:ui:stop": "pkill -f \"npm run dev\" || true",
    "setup": "run-s setup:deps setup:browsers setup:db",
    "setup:deps": "run-p setup:api setup:ui setup:e2e",
    "setup:api": "cd ../api && npm ci",
    "setup:ui": "cd ../ui && npm ci",
    "setup:e2e": "npm ci",
    "setup:browsers": "npx playwright install --with-deps",
    "setup:db": "cd ../api && run-s prisma:migrate:dev prisma:seed",
    "clean": "run-p clean:*",
    "clean:reports": "rm -rf playwright-report",
    "clean:results": "rm -rf test-results",
    "clean:deps": "rm -rf node_modules",
    "dev": "run-s setup servers:start",
    "ci": "run-s setup lint test",
    "ci:lint": "biome check . --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "npm-run-all2": "^6.1.0",
    "typescript": "^5.0.0"
  }
}
