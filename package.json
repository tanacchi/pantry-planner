{
  "name": "pantry-planner",
  "version": "1.0.0",
  "description": "Food management and shopping list application",
  "private": true,
  "workspaces": [
    "api",
    "ui", 
    "e2e",
    "mcp"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "start": "nx run-many -t start",
    "dev": "nx run-many -t dev --parallel=3",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "e2e": "nx run e2e:test",
    "e2e:headed": "nx run e2e:test:headed",
    "e2e:ui": "nx run e2e:test:ui",
    "e2e:debug": "nx run e2e:test:debug",
    "db:up": "nx run tools:db:up",
    "db:down": "nx run tools:db:down",
    "db:logs": "nx run tools:db:logs",
    "db:reset": "nx run tools:db:reset",
    "db:status": "nx run tools:db:status",
    "db:migrate": "nx run api:db:migrate",
    "db:seed": "nx run api:db:seed",
    "db:studio": "nx run api:db:studio",
    "serve:all": "run-p serve:db serve:api serve:ui",
    "serve:db": "nx run tools:db:up",
    "serve:api": "nx run api:serve",
    "serve:ui": "nx run ui:dev",
    "setup": "pnpm install && nx run-many -t install",
    "setup:full": "pnpm run setup && pnpm run db:up && pnpm run db:migrate && pnpm run db:seed",
    "clean": "nx reset && nx run tools:db:down",
    "clean:full": "nx reset && nx run tools:db:reset",
    "graph": "nx graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint"
  },
  "dependencies": {},
  "devDependencies": {
    "@nx/eslint": "^21.0.0",
    "@nx/jest": "^21.0.0", 
    "@nx/js": "^21.0.0",
    "@nx/playwright": "^21.0.0",
    "@nx/remix": "^21.0.0",
    "@nx/vite": "^21.0.0",
    "@nx/workspace": "^21.0.0",
    "npm-run-all2": "^6.1.0",
    "nx": "^21.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}